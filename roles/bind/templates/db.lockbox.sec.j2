$TTL	604800
{{ domain_name }}. 	IN	SOA	7uu13-2.{{ domain_name }}. tuule.{{ domain_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for node in groups['dns_servers'] %}
{{ domain_name }}.	IN	NS	{{ node }}.{{ domain_name }}.
{% endfor %}

{% for vm in groups['dns_servers'] %}
{{ vm }} IN A {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}
