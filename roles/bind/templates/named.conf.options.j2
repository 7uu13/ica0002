acl "corpnets" {
  192.168.42.0/23;
  127.0.0.0/8;
  172.17.0.0/16;
};

statistics-channels {                                                                                                                      
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };                                                                                           
}; 

zone "{{ domain_name }}" {
  type primary;
  file "/var/cache/bind/db.{{ domain_name }}";
  notify no;
};

options {
      directory "/var/cache/bind";

      forwarders {
        {% for f in dns_forwarders %}
        {{ f }};
        {% endfor %}
      };

      allow-query { "corpnets"; };

      dnssec-validation auto;

      listen-on-v6 { any; };
};
